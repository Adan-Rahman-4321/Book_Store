@model Website.ViewModel.AddRoleVM

@{
	ViewData["Title"] = "Add Role";
}

<h1>Add Role</h1>

<form asp-action="AddRole" method="post" class="mt-3">
	<div class="form-group row">
		<label asp-for="RoleName" class="col-1 col-form-label"></label>
		<input asp-for="RoleName" class="form-control " placeholder="Name" />
		<span asp-validation-for="RoleName" class="text-danger" > </span>
	</div>

	<div class="form-group col-4 ">
		<button type="submit" class="btn btn-primary"><i class="fa-solid fa-user-plus"></i> Add Role </button>
		<div >
			<a asp-action="ListAllRoles" class="btn btn-warning my-3"><i class="fa-solid fa-arrow-left"></i> Back</a>
		</div>
	</div>
</form>