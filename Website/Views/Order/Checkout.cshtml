@model Order


<form asp-action="Checkout" method="post" class="form-horizontal" role="form">
	<h4>Please confirm your purchase</h4>
	<div asp-validation-summary="All" class="text-danger"></div>
    
        <div class="form-group">
            <label asp-for="FullName"></label>
            <input asp-for="FullName" class="form-control" />
            <span asp-validation-for="FullName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="CurrentAddress"></label>
            <input asp-for="CurrentAddress" class="form-control" />
            <span asp-validation-for="CurrentAddress" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="PhoneNo"></label>
            <input asp-for="PhoneNo" class="form-control" />
            <span asp-validation-for="PhoneNo" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Place Order</button>
   

</form>